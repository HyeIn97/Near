<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.near">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Near"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".EasyPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.ModifyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.ProductListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.FindPwActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.FindIdActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.SignActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
    </application>

</manifest>